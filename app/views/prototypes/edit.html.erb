<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">プロトタイプ編集</h2>
      <%# 部分テンプレートでフォームを表示する %>
      <% if @prototype.present? && user_signed_in? && current_user.id == @prototype.user_id %>
       <div class="prototype__manage">
        <%= link_to "編集する", edit_prototype_path(@prototype), class: :prototype__btn %>
        <%= link_to '削除', prototype_path(@prototype), method: :delete, data: { turbo_method: :delete } %>
       </div>
       <%= render partial: 'form', locals: { prototype: @prototype } %>
      <% end %>
    </div>
  </div>
</div>